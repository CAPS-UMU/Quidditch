# IREE's runtime follows Google style while its compiler follows the
# LLVM/MLIR variable naming and formatting style.
BasedOnStyle: Google

IncludeBlocks: Regroup
IncludeCategories:
  - Regex: '<quidditch/.*>'
    Priority: 1
  - Regex: '<iree/.*>'
    Priority: 2
  - Regex: '<.*\..*>'
    Priority: 3
  - Regex: '<.*>'
    Priority: 4
  - Regex: '".*"'
    Priority: 5
